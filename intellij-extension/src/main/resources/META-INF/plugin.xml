<idea-plugin>
    <id>com.devkraken.setuphub</id>
    <name>SetupHub Sync</name>
    <vendor email="support@setuphub.dev" url="https://setuphub.dev">DevKraken</vendor>

    <description><![CDATA[
    <p>Sync and share your IDE setup (plugins, settings, themes) across devices and with the community.</p>
    
    <h3>Features:</h3>
    <ul>
        <li><b>One-Click Sync:</b> Instantly backup your IDE configuration to the cloud</li>
        <li><b>Share Your Setup:</b> Get a shareable link to showcase your development environment</li>
        <li><b>Discover Setups:</b> Browse community setups from other developers</li>
        <li><b>Cross-IDE Support:</b> Works with VS Code, Cursor, Windsurf, Antigravity, and all JetBrains IDEs</li>
    </ul>
    
    <h3>Getting Started:</h3>
    <ol>
        <li>Go to Tools → SetupHub → Login</li>
        <li>Generate a token at setuphub.dev/dashboard</li>
        <li>Paste your token and start syncing!</li>
    </ol>
    ]]></description>

    <change-notes><![CDATA[
    <h3>Version 0.0.2</h3>
    <ul>
        <li>Fix theme name display (IntelliJ Light, Darcula, etc.)</li>
        <li>Improve Plugin Verifier compatibility</li>
    </ul>
    <h3>Version 0.0.1</h3>
    <ul>
        <li>Initial release</li>
        <li>Sync plugins, themes, and editor settings</li>
        <li>View profile and browse community setups</li>
    </ul>
    ]]></change-notes>

    <!-- Compatibility: IntelliJ 2024.1+ and all future versions -->
    <idea-version since-build="241"/>
    
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Notification group for balloon notifications -->
        <notificationGroup id="SetupHub Notifications"
                           displayType="BALLOON"/>
        
        <!-- Application-level services -->
        <applicationService serviceImplementation="com.devkraken.setuphub.services.AuthService"/>
        <applicationService serviceImplementation="com.devkraken.setuphub.services.ApiService"/>
        <applicationService serviceImplementation="com.devkraken.setuphub.services.SetupService"/>
    </extensions>

    <actions>
        <group id="SetupHub.Menu" text="SetupHub" description="SetupHub Sync actions" popup="true">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            
            <!-- Primary action - Sync setup -->
            <action id="SetupHub.Sync" 
                    class="com.devkraken.setuphub.actions.SyncAction" 
                    text="Sync Setup" 
                    description="Sync your IDE setup to SetupHub"
                    icon="AllIcons.Actions.Upload"/>
            
            <separator/>
            
            <!-- Authentication actions -->
            <action id="SetupHub.Login" 
                    class="com.devkraken.setuphub.actions.LoginAction" 
                    text="Login" 
                    description="Login to SetupHub with your token"
                    icon="AllIcons.General.User"/>
            
            <action id="SetupHub.Logout" 
                    class="com.devkraken.setuphub.actions.LogoutAction" 
                    text="Logout" 
                    description="Logout from SetupHub"
                    icon="AllIcons.Actions.Exit"/>
            
            <separator/>
            
            <!-- Navigation actions -->
            <action id="SetupHub.Profile" 
                    class="com.devkraken.setuphub.actions.ProfileAction" 
                    text="View My Profile" 
                    description="Open your SetupHub profile in browser"
                    icon="AllIcons.General.Web"/>
            
            <action id="SetupHub.Browse" 
                    class="com.devkraken.setuphub.actions.BrowseSetupsAction" 
                    text="Browse Community Setups" 
                    description="Discover setups from the community"
                    icon="AllIcons.Actions.Find"/>
        </group>
    </actions>
</idea-plugin>
